// - Template for the message cards that the user recieves
// - template#mc-index
mixin message-card(messageData)
  .message-card
    .contact-icon-container
      .user-icon
    .message-display-container
      .contact-name-time
        .contact-name-container
          span= messageData.uid 
        .time-sent
          span= messageData.timestamp
      .message-content-container
        span= messageData.message

// - Assinging a template for the icons 
// - Default gradient for the icons
mixin icon-gradient
      lineargradient#paint0_linear(x1= attributes.x1 y1 = attributes.y1 x2 = attributes.x2 y2 = attributes.y2 gradientunits='userSpaceOnUse')
        stop(offset='.01' stop-color='#584B90')
        stop(offset='1' stop-color='#9E579D')
        stop(offset='1' stop-color='#9E579D')

